{
	"info": {
		"name": "Kargomok API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{ "key": "base_url", "value": "http://localhost" },
		{ "key": "token", "value": "" }
	],
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Register",
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" },
							{ "key": "Accept", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Test\",\n  \"surname\": \"Kullanıcı\",\n  \"email\": \"test@example.com\",\n  \"phone\": \"05551234567\",\n  \"password\": \"password\",\n  \"password_confirmation\": \"password\"\n}"
						},
						"url": "{{base_url}}/api/auth/register"
					}
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": "var json = pm.response.json();\nif (json.token) pm.collectionVariables.set('token', json.token);",
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" },
							{ "key": "Accept", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password\"\n}"
						},
						"url": "{{base_url}}/api/auth/login"
					}
				},
				{
					"name": "Google Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": "var json = pm.response.json();\nif (json.token) pm.collectionVariables.set('token', json.token);",
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" },
							{ "key": "Accept", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"id_token\": \"GOOGLE_ID_TOKEN\"\n}"
						},
						"url": "{{base_url}}/api/auth/google"
					}
				},
				{
					"name": "Me",
					"request": {
						"method": "GET",
						"header": [
							{ "key": "Content-Type", "value": "application/json" },
							{ "key": "Accept", "value": "application/json" },
							{ "key": "Authorization", "value": "Bearer {{token}}" }
						],
						"url": "{{base_url}}/api/auth/me"
					}
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" },
							{ "key": "Accept", "value": "application/json" },
							{ "key": "Authorization", "value": "Bearer {{token}}" }
						],
						"url": "{{base_url}}/api/auth/logout"
					}
				},
				{
					"name": "Forgot Password",
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" },
							{ "key": "Accept", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"test@example.com\"\n}"
						},
						"url": "{{base_url}}/api/auth/forgot-password"
					}
				},
				{
					"name": "Reset Password",
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" },
							{ "key": "Accept", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"test@example.com\",\n  \"token\": \"TOKEN_FROM_EMAIL\",\n  \"password\": \"yeni_sifre\",\n  \"password_confirmation\": \"yeni_sifre\"\n}"
						},
						"url": "{{base_url}}/api/auth/reset-password"
					}
				}
			]
		}
	]
}
